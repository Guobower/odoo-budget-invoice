<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_cear_inherit">
            <field name="name">Task Inherit</field>
            <field name="model">budget.capex.cear</field>
            <field name="inherit_id" ref="budget_capex.view_form_cear_commitment"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="action"
                        icon="fa-list-ul">
                        <!--<field string="Invoice" name="total_invoice" widget="statinfo"/>-->
                    </button>
                </xpath>
                <xpath expr="//field[@name='fn_utilized_amount']" position="before">
                    <field name="im_utilized_amount"/>
                </xpath>
                <xpath expr="//notebook/page[@name='financial']/notebook" position="inside">
                    <page string="Invoice">
                        <field name="invoice_ids"/>
                    </page>
                    <page string="Purchase Order">
                        <field name="po_ids"/>
                    </page>
                    <page string="Actuals">
                        <field name="actual_ids">
                            <tree editable="bottom">
                                <field name="amount" sum="1"/>
                                <field name="date" sum="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_tree_cear_inherit">
            <field name="name">Task Inherit</field>
            <field name="model">budget.capex.cear</field>
            <field name="inherit_id" ref="budget_capex.view_tree_cear_commitment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fn_utilized_amount']" position="after">
                    <field name="im_utilized_amount"/>
                    <field name="problem"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>