<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <header>
                        <button
                            string="Verify"
                            name="verify"
                            type="workflow"
                            states="draft" />
                        <button
                            string="Place On-hold"
                            name="on_hold"
                            type="workflow"
                            states="draft,verified" />
                        <button
                            string="Reject"
                            name="reject"
                            type="workflow"
                            states="draft,verified,on hold" />

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,verified,summary generated,under certification,sent to finance,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="invoice_no" default_focus="1" placeholder="Invoice No"/>
                            </h1>
                            <h3>
                                <field name="problem" decoration-danger="True" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="task_id"/>
                                <field name="region_id" required="1"/>
                                <field name="section_id"/>
                                <field name="sub_section_id"/>
                            </group>
                            <group>
                                <field name="related_authorized_amount" readonly="1"/>
                                <field name="related_utilized_amount" readonly="1"/>
                                <field name="related_total_amount" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="contract_id"
                                       context="{'form_view_ref': 'budget_contractor.view_form_contract'}"/>
                                <field name="proj_no"/>
                                <field name="invoice_type"/>
                                <field name="payment_type"/>
                                <field name="cost_center"/>
                                <field name="expense_code"/>
                            </group>
                            <group>
                                <field name="invoice_amount" readonly="1"/>
                                <field name="capex_amount"/>
                                <field name="opex_amount"/>
                                <field name="revenue_amount"/>
                                <field name="penalty"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="received_date"/>
                                <field name="invoice_date"/>
                                <field name="invoice_cert_date"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="rfs_date"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="signed_date"/>
                                <field name="sent_finance_date"/>
                                <field name="closed_date"/>
                                <field name="reject_date"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="invoice_summary_id" readonly="1"/>
                            <field name="description"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_tree_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice</field>
            <field name="arch" type="xml">
                <tree decoration-success="problem in ['ok', False]"
                      decoration-danger="problem in ['duplicate', 'overrun']"
                      decoration-muted="state == 'closed'">
                    <field name="invoice_no"/>
                    <field name="contract_id"/>
                    <field name="invoice_amount"/>
                    <field name="invoice_date"/>
                    <field name="invoice_cert_date"/>
                    <field name="received_date"/>
                    <field name="sent_finance_date"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                    <field name="problem"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    <!--END CONTRACTOR VIEWS-->
    <!--START SEARCH-->
        <record model="ir.ui.view" id="search_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="invoice_no"/>
                    <!--<field name="contractor_id"/>-->
                    <field name="create_uid"/>
                    <field name="problem"/>
                    <filter
                        name="filter_state"
                        string="Need Action"
                        domain="[('state', 'in', ['draft', 'verified', 'summary generated','under certification', 'sent to finance'])]"/>
                </search>
            </field>
        </record>
    <!--END SEARCH-->
    <!--START ACTIONS-->
        <!--Invoice Action-->
        <record model="ir.actions.act_window" id="action_invoice">
            <field name="name">Invoice</field>
            <field name="res_model">budget.invoice</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="search_invoice"/>
            <field name="context">{'search_default_filter_state': 1}</field>
            <!--<field name="domain">[('is_budget_invoice','=',True)]</field>-->
            <!--<field name="context">{'default_is_budget_invoice': True}</field>-->
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <record model="ir.actions.act_window.view" id="action_invoice_view_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_invoice"/>
            <field name="act_window_id" ref="action_invoice"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_invoice_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_invoice"/>
            <field name="act_window_id" ref="action_invoice"/>
        </record>
    <!--END ACTIONS-->
    </data>
</openerp>