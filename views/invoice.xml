<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <!--FORM VIEW-->
        <record model="ir.ui.view" id="view_form_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <header>
                        <button
                                string="Verify"
                                name="verify"
                                type="workflow"
                                states="draft"/>
                        <button
                                string="Place On-hold"
                                name="on_hold"
                                type="workflow"
                                states="draft,verified"/>
                        <button
                                string="Reject"
                                name="reject"
                                type="workflow"
                                states="draft,verified,on hold"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,verified,summary generated,under certification,sent to finance,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <group>
                                <field name="team" groups="base.group_system"/>
                            </group>
                            <h1>
                                <field name="invoice_no" required="1" default_focus="1" placeholder="Invoice No"/>
                            </h1>
                            <h3>
                                <field name="problem" decoration-danger="True" readonly="1"/>
                            </h3>
                        </div>
                        <notebook>
                            <page string="General">
                                <group>
                                    <group>
                                        <field name="region_id"/>
                                        <field name="contract_id"
                                               context="{'form_view_ref': 'budget_contractor.view_form_contract'}"/>
                                        <field name="po_id"/>
                                        <field name="section_id"/>
                                        <field name="sub_section_id"/>
                                        <field name="cost_center_id"/>
                                        <field name="account_code_id"/>
                                        <field name="proj_no"/>
                                    </group>
                                    <group>
                                        <field name="penalty_percentage"/>
                                        <field name="on_hold_percentage"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="summary_ids" widget="many2many_tags"/>
                                    <field name="description"/>
                                    <field name="remark"/>
                                </group>
                            </page>
                            <page string="Summary">
                                <group>
                                    <group>
                                        <field name="capex_amount"/>
                                        <field name="opex_amount"/>
                                        <field name="revenue_amount"/>
                                        <field name="invoice_amount"/>
                                    </group>
                                    <group>
                                        <field name="penalty_amount"/>
                                        <field name="certified_invoice_amount"/>
                                        <field name="on_hold_amount"/>
                                        <field name="balance_amount"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Date">
                                <group>
                                    <group>
                                        <field name="received_date"/>
                                        <field name="invoice_date"/>
                                        <field name="invoice_cert_date"/>
                                    </group>
                                    <group>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="rfs_date"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="signed_date"/>
                                        <field name="sent_finance_date"/>
                                        <field name="closed_date"/>
                                        <field name="reject_date"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <field name="amount_ids" context="{'default_invoice_id': id}">
                                <tree editable="bottom">
                                    <field name="invoice_id" groups="base.group_system"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="budget_type" required="1"/>
                                    <field name="invoice_type" required="1"/>
                                    <field name="payment_type" required="1"/>
                                    <field name="amount" required="1" sum="1"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="cear_allocation_ids" context="{'default_invoice_id': id,
                                                                        'default_amount': capex_amount}">
                                <tree editable="bottom" decoration-success="problem in ['ok', False]"
                                      decoration-danger="problem in ['overrun']">
                                    <field name="invoice_id" groups="base.group_system"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="cear_id" required="1" options="{'no_create': True}"/>
                                    <field name="problem"/>
                                    <field name="related_cear_authorized_amount" readonly="1" sum="1"/>
                                    <field name="related_cear_fn_utilized_amount" readonly="1" sum="1"/>
                                    <field name="related_cear_im_utilized_amount" readonly="1" sum="1"/>
                                    <field name="amount" required="1" sum="1"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="oear_allocation_ids" context="{'default_invoice_id': id}">
                                <tree editable="bottom">
                                    <field name="invoice_id" groups="base.group_system"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="oear_id"/>
                                    <field name="amount" required="1" sum="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice.invoice</field>
            <field name="arch" type="xml">
                <tree decoration-success="problem in ['ok', '', False]"
                      decoration-danger="problem not in ['ok', '', False]"
                      decoration-muted="state == 'closed'">
                    <field name="invoice_no"/>
                    <field name="contract_id"/>
                    <field name="certified_invoice_amount"/>
                    <field name="invoice_date"/>
                    <field name="invoice_cert_date"/>
                    <field name="received_date"/>
                    <field name="sent_finance_date"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                    <field name="problem"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--END VIEWS-->
        <!--START SEARCH-->
        <record model="ir.ui.view" id="search_invoice">
            <field name="name">Invoice</field>
            <field name="model">budget.invoice.invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="invoice_no"/>
                    <field name="contract_id"/>
                    <filter
                            name="my_activity"
                            string="My Activities"
                            domain="[('create_uid', '=', uid)]"/>
                    <filter
                            name="need_action"
                            string="Need Action"
                            domain="[('state', 'in', ['draft', 'verified', 'summary generated','under certification', 'sent to finance'])]"/>
                    <filter
                            name="need_action_regional"
                            string="Regional Need Action"
                            domain="[('team', '=', 'regional'),
                                     ('state', 'in', ['draft', 'verified', 'summary generated','under certification', 'sent to finance'])]"/>
                    <filter
                            name="need_action_head_office"
                            string="Head Office Need Action"
                            domain="[('team', '=', 'head office'),
                                     ('state', 'in', ['draft', 'verified', 'summary generated','under certification', 'sent to finance'])]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH-->
        <!--START ACTIONS-->
        <!--Invoice Action-->
        <record model="ir.actions.act_window" id="action_invoice">
            <field name="name">Invoice</field>
            <field name="res_model">budget.invoice.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_invoice"/>
            <field name="search_view_id" ref="search_invoice"/>
            <field name="context">{'form_view_ref': 'budget_core.view_form_invoice',
                'search_default_need_action': 1,
                }
            </field>
        </record>
        <!--Invoice Regional Action-->
        <record model="ir.actions.act_window" id="action_invoice_regional">
            <field name="name">Invoice</field>
            <field name="res_model">budget.invoice.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_invoice"/>
            <field name="search_view_id" ref="search_invoice"/>
            <field name="context">{'form_view_ref': 'budget_core.view_form_invoice',
                'search_default_need_action_regional': 1,
                }
            </field>
        </record>
        <!--Invoice Head Office Action-->
        <record model="ir.actions.act_window" id="action_invoice_head_office">
            <field name="name">Invoice</field>
            <field name="res_model">budget.invoice.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_invoice"/>
            <field name="search_view_id" ref="search_invoice"/>
            <field name="context">{'form_view_ref': 'budget_core.view_form_invoice',
                'search_default_need_action_head_office': 1,
                }
            </field>
        </record>

        <!--END ACTIONS-->
    </data>
</openerp>