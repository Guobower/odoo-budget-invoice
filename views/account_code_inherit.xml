<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_account_code_inherit">
            <field name="name">Account Code Inherit</field>
            <field name="model">budget.opex.account.code</field>
            <field name="inherit_id" ref="budget_opex.view_form_account_code"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="action"
                        icon="fa-list-ul">
                        <field string="Invoice" name="total_invoice" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='expenditure_amount']" position="after">
                    <field name="utilized_amount"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Invoice">
                        <field name="invoice_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_tree_account_code_inherit">
            <field name="name">Account Code Inherit</field>
            <field name="model">budget.opex.account.code</field>
            <field name="inherit_id" ref="budget_opex.view_tree_account_code"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expenditure_amount']" position="after">
                    <field name="utilized_amount"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>