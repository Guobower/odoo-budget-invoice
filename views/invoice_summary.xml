<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START INVOICE SUMMARY VIEWS-->
        <!--INVOICE SUMMARY FORM VIEW-->
        <record model="ir.ui.view" id="view_form_invoice_summary">
            <field name="name">Invoice Summary</field>
            <field name="model">budget.invoice.summary</field>
            <field name="arch" type="xml">
                <form string="Invoice Summary">
                    <header>
                        <button
                            string="Generate Summary"
                            name="set2generated"
                            type="object"
                            states="draft" />
                        <button
                            string="Send to Finance"
                            name="set2sent_to_finance"
                            type="object"
                            states="generated"/>
                        <button
                            string="Close"
                            name="set2closed"
                            type="object"
                            states="sent to finance"/>
                        <button
                            string="Cancel"
                            name="set2canceled"
                            type="object"
                            states="draft,generated,sent to finance,closed,canceled"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="summary_no" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="section"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page string="Invoices">
                                <field name="invoice_ids" widget="many2many"
                                       domain="[('state','in',['verified'])]"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--INVOICE SUMMARY TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_invoice_summary">
            <field name="name">Invoice Summary</field>
            <field name="model">budget.invoice.summary</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state=='closed'">
                    <field name="summary_no"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <field name="state"/>
                    <button name="export_file" string="Download" type="object" icon="fa-download"
                            attrs="{'invisible':[('state','=','draft')]}"/>
                </tree>
            </field>
        </record>
    <!--END INVOICE SUMMARY VIEWS-->
    <!--START SEARCH-->
        <record model="ir.ui.view" id="search_invoice_summary">
            <field name="name">Invoice Summary</field>
            <field name="model">budget.invoice.summary</field>
            <field name="arch" type="xml">
                <search>
                    <field name="summary_no"/>
                    <filter
                        name="filter_state"
                        string="Need Action"
                        domain="[('state', 'in', ['draft', 'generated', 'sent to finance'])]"/>
                </search>
            </field>
        </record>
    <!--END SEARCH-->

    <!--START ACTIONS-->
        <!--Invoice Action-->
        <record model="ir.actions.act_window" id="action_invoice_summary">
            <field name="name">Invoice Summary</field>
            <field name="res_model">budget.invoice.summary</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_invoice_summary"/>
            <field name="context">{'search_default_filter_state': 1}</field>
            <!--<field name="domain">[('is_budget_invoice','=',True)]</field>-->
            <!--<field name="context">{'default_is_budget_invoice': True}</field>-->
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <!--<record model="ir.actions.act_window.view" id="action_invoice_view_tree">-->
